// CLI Commands

export fn execute_command(command, args) {
    match command {
        "help" => cmd_help(),
        "version" => cmd_version(),
        "process" => cmd_process(args),
        "analyze" => cmd_analyze(args),
        _ => {
            throw "Unknown command: " + command
        }
    }
}

