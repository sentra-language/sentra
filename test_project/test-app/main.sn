// test-app - CLI Tool

import { parse_args } from "system"
import { execute_command } from "./commands.sn"

fn main() {
    let args = parse_args()
    
    if len(args) < 2 {
        show_usage()
        return
    }
    
    let command = args[1]
    let cmd_args = slice(args, 2)
    
    try {
        execute_command(command, cmd_args)
    } catch err {
        log("Error: " + err)
        exit(1)
    }
}

fn show_usage() {
    log("test-app - Command Line Tool")
    log("")
    log("Usage:")
    log("  test-app <command> [args...]")
    log("")
    log("Commands:")
    log("  help      Show this help message")
    log("  version   Show version information")
    log("  process   Process input files")
    log("  analyze   Analyze data")
}

main()
