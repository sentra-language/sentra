// src/utils.sn - Utility functions

// Export: Format timestamp
fn FormatTime() {
    // In real implementation, would use time module
    return "2024-01-01 12:00:00"
}

// Export: Generate report header
fn GenerateHeader(title) {
    let separator = "=" * 50
    return separator + "\n" + title + "\n" + separator
}

// Export: Convert array to CSV string
fn ArrayToCSV(arr) {
    let result = ""
    for i in [0, len(arr) - 1] {
        if i > 0 {
            result = result + ","
        }
        result = result + str(arr[i])
    }
    return result
}

// Export: Check if IP is private
fn IsPrivateIP(ip) {
    if starts_with(ip, "192.168.") {
        return true
    }
    if starts_with(ip, "10.") {
        return true
    }
    if starts_with(ip, "172.") {
        // Check if it's in 172.16.0.0 - 172.31.255.255
        return true
    }
    return false
}