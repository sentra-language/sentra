// src/simple_utils.sn - Simple utility functions

// Export: Format title
fn FormatTitle(text) {
    let line = "=" * 40
    return line + "\n" + text + "\n" + line
}

// Export: Is even number
fn IsEven(n) {
    let remainder = n % 2
    return remainder == 0
}

// Export: Max of two numbers
fn Max(a, b) {
    if a > b {
        return a
    }
    return b
}