{
  "name": "sentra-syntax",
  "displayName": "Sentra Language Support",
  "description": "Syntax highlighting and language support for Sentra security language",
  "version": "1.0.0",
  "publisher": "sentra-language",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Themes"
  ],
  "contributes": {
    "languages": [
      {
        "id": "sentra",
        "aliases": ["Sentra", "sentra"],
        "extensions": [".sn", ".sentra"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sentra",
        "scopeName": "source.sentra",
        "path": "../sentra.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "sentra",
        "path": "./snippets/sentra.json"
      }
    ]
  }
}