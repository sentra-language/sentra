fn check_port(port) {
    // Check if port is in secure range
    if port < 1024 {
        log("âš ï¸  Port " + port + " is privileged - requires root")
        return false
    }
    
    if port == 3389 {
        log("ðŸ›‘ Port 3389 (RDP) should not be exposed")
        return false
    }
    
    if port == 23 {
        log("ðŸ›‘ Port 23 (Telnet) is insecure")
        return false
    }
    
    log("âœ“ Port " + port + " passed security check")
    return true
}

fn validate_password_strength(length) {
    if length < 8 {
        log("âŒ Password too short: " + length + " chars")
        return 0
    }
    
    if length < 12 {
        log("âš ï¸  Password weak: " + length + " chars (recommend 12+)")
        return 1
    }
    
    log("âœ… Password strong: " + length + " chars")
    return 2
}

