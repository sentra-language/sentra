#!/usr/bin/env sentra

log("Testing logical operators:")

// Test AND (&&)
let a = true
let b = false
if a && b {
    log("ERROR: a && b should be false")
} else {
    log("✓ AND operator works")
}

// Test OR (||)
if a || b {
    log("✓ OR operator works")
} else {
    log("ERROR: a || b should be true")
}

// Test comparison operators
let x = 10
let y = 20

// Test less than (<)
if x < y {
    log("✓ Less than operator works")
} else {
    log("ERROR: 10 < 20 should be true")
}

// Test greater than (>)
if y > x {
    log("✓ Greater than operator works")
} else {
    log("ERROR: 20 > 10 should be true")
}

// Test less than or equal (<=)
if x <= 10 {
    log("✓ Less than or equal operator works")
} else {
    log("ERROR: 10 <= 10 should be true")
}

// Test greater than or equal (>=)
if y >= 20 {
    log("✓ Greater than or equal operator works")
} else {
    log("ERROR: 20 >= 20 should be true")
}

// Test equality (==)
if x == 10 {
    log("✓ Equality operator works")
} else {
    log("ERROR: x == 10 should be true")
}

// Test inequality (!=)
if x != y {
    log("✓ Inequality operator works")
} else {
    log("ERROR: x != y should be true")
}

// Test complex expressions
if (x < y) && (y > 15) {
    log("✓ Complex expression with parentheses works")
} else {
    log("ERROR: Complex expression failed")
}

// Test chained conditions
if x < y && y >= 20 || b {
    log("✓ Chained conditions work")
} else {
    log("ERROR: Chained conditions failed")
}

log("\nAll operator tests completed!")